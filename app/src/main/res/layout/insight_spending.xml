                    android:text="RM : "
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/electricity_last_month_spending_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/electricity_last_month_spending_text"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/electricity_last_month_spending_rm"
                    android:fontFamily="@font/roboto"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="30sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/water_last_month_spending_card"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardCornerRadius="1dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
