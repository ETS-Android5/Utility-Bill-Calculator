<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="375dp"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center_horizontal"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_spending_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="Type"
            android:textColor="#fa9f07" />

        <TextView
            android:id="@+id/spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/list_spending_type"
            android:fontFamily="@font/roboto"
            android:text=":"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/list_spending_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/spacing"
            android:fontFamily="@font/roboto"
            android:text="Name"
            android:textColor="#fa9f07" />

        <TextView
            android:id="@+id/list_spending_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:text="Date"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/list_spending_rm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_spending_type"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"
            android:text="RM : "
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/list_spending_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_spending_type"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/list_spending_rm"
            android:fontFamily="@font/roboto"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="30sp" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>