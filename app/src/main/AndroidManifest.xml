<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.utilitybillcalculator">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_budget"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_budget_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ElectricChoice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CalculatorBill"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WaterChoice"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.OtherAdd"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.HistoryChoice"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SpendingHistory"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.SpendingInsight"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.TariffRates"
            android:screenOrientation="portrait"/>
    </application>

</manifest>